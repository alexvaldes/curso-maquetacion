.Contenido
	background green
	width 100%
	display flex
	flex-direction column
	overflow-y scroll
	&-skill
		background-image url(../img/fondo.png)
		background-size cover
		min-height 10em
		display flex
		&-info
			align-items flex-end
			padding-right 4em
			display flex
			flex-direction column
			justify-content center
			padding-left: 22em;
			width 100%
			background: rgba(161,189,134,0.58);
			background: -moz-linear-gradient(left, rgba(161,189,134,0.58) 0%, rgba(200,242,92,0.58) 53%, rgba(210,255,82,0.7) 66%, rgba(210,255,82,1) 100%);
			background: -webkit-gradient(left top, right top, color-stop(0%, rgba(161,189,134,0.58)), color-stop(53%, rgba(200,242,92,0.58)), color-stop(66%, rgba(210,255,82,0.7)), color-stop(100%, rgba(210,255,82,1)));
			background: -o-linear-gradient(left, rgba(161,189,134,0.98) 0%, rgba(200,242,92,0.58) 53%, rgba(210,255,82,0.7) 66%, rgba(210,255,82,1) 100%);
			background: -ms-linear-gradient(left, rgba(161,189,134,0.58) 0%, rgba(200,242,92,0.58) 53%, rgba(210,255,82,0.7) 66%, rgba(210,255,82,1) 100%);
@media(max-width 680px)
	.Contenido
		flex-direction row
		flex-wrap wrap
		&-skill
			width 50%
			&-info
				padding 1em